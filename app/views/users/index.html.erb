<div class="box">

<div class="container">
  <div class="row">
　　<div class="col-xs-3">

<%= render 'books/list', user: @user, book: @book %>

　　</div>

　　<div class="col-xs-9">

    <h2>Users</h2>

    <table class='table'>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg",size:'30x30',format: 'no_image.jpg' %></td>
      <td><%= user.name %></td>
      <td><%= link_to"Show",user_path(user.id) %></td>
      </tr>
    <% end %>

   </table>

  </div>
</div>
</div>

</div>

<div class="box">

<div class="container">
  <div class="row">
　　<div class="col-xs-3">

<%= notice %>
<%= render 'users/list', user: @user, book: @book %>

　　</div>

　　<div class="col-xs-9">

<h2>Books</h2>

<table class='table table-hover table-inverse'>
	<thead>
		<tr>
		  <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
		</tr>
	</thead>

	<% @books.each do |book| %>
	<tbody>
	<% link_to user_path(@user.id) do %>
		<tr>
			<td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg' ,fallback: "no_image.jpg" %></td>
			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.body %></td>
		</tr>
	<% end %>
	</tbody>
	<% end %>
</table>

</div>
</div>
</div>

</div>
<div class="container">
  <div class="row">
　　<div class="col-xs-3">

<%= render 'users/list', book: @new_book , user: @user %>

</div>

　　<div class="col-xs-9">

<h2>Book detail</h2>

<table class="table">

	  <tr>
		<td>
			<%= link_to user_path(@book.user.id) do %>
			<%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, size:'50x50', format: 'jpeg' ,fallback: "no_image.jpg" %><br>
			<%= @book.user.name %>
			<% end %>
		</td>

		<td><%= @book.title %></td>
        <td><%= @book.body %></td>

		<% if @book.user_id == current_user.id %>
		<td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>

		<td><%= link_to "Destroy", book_path(@book.id), class: "btn-sm btn-danger destroy(@book.id)", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        <% end %>
	  </tr>
</table>



</div>
</div>
</div>
<h2>User info</h2>

<%= attachment_image_tag user, :profile_image, :fill, 100, 100, size: "100x100", format: 'jpeg' ,fallback: "no_image.jpg" %>

<table class="table">

  <thead>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>

  <%= link_to edit_user_path(user.id) do %>
    <span class="glyphicon glyphicon-wrench btn btn-default btn-block"></span>
  <% end %>


<h2>New book</h2>

<%= form_for(book, url: books_path) do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title, class: "col-xs-12" %>
    <h4>Opinion</h4>
      <%= f.text_area :body, class: "col-xs-12" %><br>
      <%= f.submit "Create Book", class: "col-xs-12 btn btn-primary" %>

<% end %>


